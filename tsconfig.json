    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": false,
    "strict": false,
    "target": "es2017",
    "allowJs": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
