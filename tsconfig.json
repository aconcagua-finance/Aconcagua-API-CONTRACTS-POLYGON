{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,

    "outDir": "dist",
    "sourceMap": false,
    "strict": false,
    "target": "es2017",
    "allowJs": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "compileOnSave": true,
  "include": ["src", "contracts"]
}
